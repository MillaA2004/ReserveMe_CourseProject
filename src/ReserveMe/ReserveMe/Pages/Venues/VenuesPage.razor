@page "/admin/venues"
@inject IJSRuntime JSRuntime
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager

<PageTitle>Manage Venues</PageTitle>

<AuthorizeView Roles="SuperAdmin">
    <Authorized>
        <h1 class="page-title fw-medium fs-18 mb-2">"Manage Venues"</h1>

        <div class="row">
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                            <div class="d-flex flex-wrap gap-1 project-list-main">
                                <a href="projects-create"
                                   class="btn btn-primary me-2"
                                   data-bs-toggle="modal"
                                   data-bs-target="#edit-item">
                                    <i class="ri-add-line me-1 fw-medium align-middle"></i>"Add new Venues"
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12">
                <div class="card custom-card overflow-hidden">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table text-nowrap" style="min-height: 140px">
                                <thead>
                                    <tr>
                                        <th scope="col">Menu Name</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Owner</th>
                                        <th scope="col">Location</th>
                                        <th scope="col">Created At</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var venue in venues)
                                    {
                                        var owner = GetVenueOwner(venue.Id);

                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="me-2">
                                                        <span class="avatar avatar-rounded p-1 bg-danger-transparent">
                                                            @if (!string.IsNullOrEmpty(venue.LogoUrl))
                                                            {
                                                                <img src="@($"{venue.LogoUrl}")">
                                                            }
                                                            else
                                                            {
                                                                @* Some default empty image *@
                                                                @* <img src="@($"{NavigationManager.BaseUri}assets/images/company-logos/1.png")" alt=""> *@
                                                            }
                                                        </span>
                                                    </div>
                                                    <div class="flex-fill">
                                                        <a href="/admin/menus/@venue.Id" class="fw-medium fs-14 d-block text-truncate project-list-title">@venue.Name</a>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-muted mb-0 project-list-description">@venue.Description</p>
                                            </td>
                                            <td>
                                                @if (string.IsNullOrEmpty(owner))
                                                {
                                                    <span class="text-danger">"No Owner"</span>
                                                }
                                                else
                                                {
                                                    @owner
                                                }
                                            </td>
                                            <td>
                                                @venue.Longitude° N, @venue.Latitude° W
                                            </td>
                                            <td>
                                                @if (venue.CreatedAt.HasValue)
                                                {
                                                    @venue.CreatedAt.Value.ToString("dd MMMM yyyy")
                                                }
                                                else
                                                {
                                                    <em>"NoDateSet_Label"</em>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <a class="btn btn-icon btn-sm btn-info-light btn-wave" href="/admin/menus/@venue.Id" title="Manage menu properties">
                                                        <i class="ri-edit-line"></i>
                                                    </a>
                                                    <a class="btn btn-icon btn-sm btn-info-light btn-wave" href="/admin/menus/@venue.Id/settings">
                                                        <i class="ri-settings-4-fill"></i>
                                                    </a>
                                                    @* <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-danger-light btn-wave"
                                                       @onclick='() => ShowDeleteConfirmation("Delete Menu", menu.MenuId, menu.Name)'>
                                                        <i class="ri-delete-bin-line"></i>
                                                    </a> *@
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </Authorized>
    <NotAuthorized>
    </NotAuthorized>
</AuthorizeView>
