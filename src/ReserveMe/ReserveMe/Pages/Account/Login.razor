@page "/login"

<div class="login-container">
    <div class="login-card shadow-lg p-4 rounded">
        <h3 class="text-center mb-4">Welcome Back</h3>
        <p class="text-muted text-center mb-4">Please sign in to continue</p>

        <EditForm Model="loginUser" OnValidSubmit="LoginUser">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-3" />

            <div class="mb-3">
                <label for="email" class="form-label fw-bold">Email</label>
                <InputText id="email"
                           class="form-control form-control-lg"
                           placeholder="Enter your email"
                           @bind-Value="loginUser.Email" />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label fw-bold">Password</label>
                <InputText id="password"
                           type="password"
                           class="form-control form-control-lg"
                           placeholder="Enter your password"
                           @bind-Value="loginUser.Password" />
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </button>
        </EditForm>

        <div class="text-center mt-3">
            <a href="/register" class="text-decoration-none">Create an account</a>
        </div>
    </div>
</div>

<style>

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .login-card {
        max-width: 400px;
        width: 100%;
        background-color: #fff;
    }

        .login-card h3 {
            font-weight: 600;
            color: #343a40;
        }

        .login-card .form-control {
            border-radius: 8px;
        }

        .login-card button {
            border-radius: 8px;
            font-weight: 600;
        }

        .login-card a {
            color: #0d6efd;
            font-size: 0.9rem;
        }
</style>